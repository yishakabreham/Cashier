<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.windowDashboard"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rlInformationPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/profileLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_alignParentLeft="true">
            <RelativeLayout
                android:id="@+id/rlUserPhoto"
                android:layout_width="110dp"
                android:layout_height="110dp">
                <ImageView
                    android:id="@+id/profilePicIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    app:srcCompat="@drawable/icon_cashier"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_toRightOf="@id/rlUserPhoto"
                android:background="@drawable/custom_relative_layout">
                <TextView
                    android:id="@+id/compTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="Selam Bus Private Limited Company (PLC)"
                    android:textColor="@color/st_patrick_blue"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"/>
                <TextView
                    android:id="@+id/userNTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/compTV"
                    android:fontFamily="@font/open_sans_regular"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="Yishak Abreham"
                    android:textAllCaps="true"
                    android:textColor="@color/blueBlack"
                    android:textSize="10sp"
                    android:layout_alignLeft="@id/compTV"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/userRoleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userNTV"
                    android:fontFamily="@font/open_sans_regular"
                    android:paddingBottom="2dp"
                    android:text="Cashier"
                    android:textColor="@color/blueBlack"
                    android:textSize="10sp"
                    android:layout_alignLeft="@id/compTV"/>
                <TextView
                    android:id="@+id/dateEn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userRoleTV"
                    android:fontFamily="@font/open_sans_regular"
                    android:paddingBottom="2dp"
                    android:text="Tuesday October 27, 2020"
                    android:textColor="@color/blueBlack"
                    android:textSize="10sp"
                    android:layout_alignLeft="@id/compTV"/>
                <TextView
                    android:id="@+id/dateAm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateEn"
                    android:fontFamily="@font/open_sans_regular"
                    android:paddingBottom="2dp"
                    android:text="ማክሰኞ ጥቅምት 17 2013"
                    android:textColor="@color/blueBlack"
                    android:textSize="10sp"
                    android:layout_alignLeft="@id/dateEn"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/welcoming"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rlInformationPanel">
        <ImageView
            android:id="@+id/icon_dashboard"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/icon_dashboard"
            android:padding="10dp"/>
        <RelativeLayout
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/icon_dashboard"
            android:background="@color/lightGray"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/quick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view1"
            android:text="Quick Dashboard"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/st_patrick_blue"
            android:textSize="10sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/quickWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quick"
            android:text="Welcome to your dashboard, Yishak Abreham"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/celestial_blue"
            android:textSize="9sp"
            android:layout_alignLeft="@id/quick"
            android:textAllCaps="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/letsBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcoming"
        android:background="@color/whiteSmock">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Booking"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/st_patrick_blue"
            android:textSize="9sp"
            android:padding="10dp"
            android:textAllCaps="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/parentLayoutNEW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/letsBooking"
        android:background="@color/whiteSmock">
        <RelativeLayout
            android:id="@+id/rLBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteSmock">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_centerHorizontal="true">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlDailyTrips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parentLayoutNEW"
        android:background="@color/whiteSmock">
        <TextView
            android:id="@+id/countLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today Trips"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/st_patrick_blue"
            android:textSize="9sp"
            android:padding="10dp"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/dailyTripCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total 7 Trips"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/celestial_blue"
            android:textSize="9sp"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/countLbl"
            android:layout_marginRight="2dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rLToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteSmock"
        android:layout_below="@id/rlDailyTrips"
        android:layout_above="@id/footer">
        <ListView
            android:id="@+id/listTrips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/whiteSmock">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/copy"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="10dp"
                android:src="@drawable/icon_copyright"/>
            <TextView
                android:id="@+id/arr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/copy"
                android:text="all rights reserved"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/st_patrick_blue"
                android:textSize="9sp"
                android:textAllCaps="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>