<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/imgDashboardIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_phone"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="16dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgDashboardIcon"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/txtTileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/st_patrick_blue"
                android:textSize="9dp"
                android:text="Ticketing"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/txtTileSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTileTitle"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/celestial_blue"
                android:textSize="9dp"
                android:text="Ticketing"
                android:layout_alignLeft="@id/txtTileTitle"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>