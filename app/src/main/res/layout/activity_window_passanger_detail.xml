<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.windowPassengerDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rlTin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="25dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_relative_layout"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/lblTIN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name / ስም"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/blueBlackDark"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp"/>
                    <ImageView
                        android:id="@+id/imageSearch"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblTIN"
                        android:layout_alignLeft="@id/lblTIN"
                        android:src="@drawable/icon_name"/>
                    <AutoCompleteTextView
                        android:id="@+id/txtFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/imageSearch"
                        android:layout_marginLeft="20dp"
                        android:hint="Enter First Name"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="11dp"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null"
                        android:layout_alignTop="@id/imageSearch"
                        android:inputType="number"
                        android:maxLength="10"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlUserName"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/rlTin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_relative_layout"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/lblUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Middle Name / የአባት ስም"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/blueBlackDark"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp"/>
                    <ImageView
                        android:id="@+id/imageUser"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblUserName"
                        android:layout_alignLeft="@id/lblUserName"
                        android:src="@drawable/icon_name"/>
                    <AutoCompleteTextView
                        android:id="@+id/txtMiddleName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/imageUser"
                        android:layout_marginLeft="20dp"
                        android:hint="Enter Middle Name"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="11dp"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null"
                        android:layout_alignTop="@id/imageUser"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlPassword"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/rlUserName">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_relative_layout"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/lblPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Name / የአያት ስም"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/blueBlackDark"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp"/>
                    <ImageView
                        android:id="@+id/imagePassword"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblPassword"
                        android:layout_alignLeft="@id/lblPassword"
                        android:src="@drawable/icon_name"/>
                    <AutoCompleteTextView
                        android:id="@+id/txtLastName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/imagePassword"
                        android:layout_marginLeft="20dp"
                        android:hint="Enter Last Name"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="11dp"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null"
                        android:layout_alignTop="@id/imagePassword"
                        android:inputType="textPassword"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlPhone"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/rlPassword">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_relative_layout"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/lblPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number / ስልክ ቁጥር"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/blueBlackDark"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="10dp"/>
                    <ImageView
                        android:id="@+id/imagePhone"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblPhone"
                        android:layout_alignLeft="@id/lblPhone"
                        android:src="@drawable/icon_phone"/>
                    <AutoCompleteTextView
                        android:id="@+id/txtPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/imagePhone"
                        android:layout_marginLeft="20dp"
                        android:hint="Enter Phone Number"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="11dp"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null"
                        android:layout_alignTop="@id/imagePhone"
                        android:inputType="textPassword"/>
                </RelativeLayout>
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/rlPhone"
                android:background="@drawable/custom_login_button"
                android:layout_margin="10dp"
                android:text="Confirm Passenger Detail / ያረጋግጡ"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_regular"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>