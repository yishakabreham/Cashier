<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.windowSeatArrangement"
    android:id="@+id/rootLayoutSeatArrangement">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rLSubTrips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_relative_layout"
            android:layout_margin="8dp">
            <ImageView
                android:id="@+id/imgSt"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_route"
                android:layout_margin="10dp"/>
            <RelativeLayout
                android:id="@+id/lbl"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imgSt"
                android:background="@color/white"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lbl"
                android:layout_centerVertical="true"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/txtEnRouteDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:textAllCaps="true"
                    android:textColor="@color/st_patrick_blue"
                    android:text="Addis Ababa - Mekelle"
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/txtAmRouteDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtEnRouteDesc"
                    android:layout_alignLeft="@id/txtEnRouteDesc"
                    android:fontFamily="@font/open_sans_bold"
                    android:textAllCaps="true"
                    android:textColor="@color/celestial_blue"
                    android:text="አዲስ አበባ - መቀለ"
                    android:textSize="11dp" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/imgDown"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/icon_down_arrow" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rLinformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/dotted">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="7dp"
            android:layout_height="140dp"
            android:background="@color/redColor"
            android:id="@+id/sideRL">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/sideRL"
            android:background="@drawable/dotted">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="5dp"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:background="#43A047"
            android:id="@+id/sideTwoRL">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_toLeftOf="@id/sideTwoRL"
            android:layout_toRightOf="@id/sideRL"
            android:layout_marginRight="5dp"
            android:id="@+id/containerRL">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:id="@+id/txtCi"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                android:fontFamily="@font/open_sans_regular"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/st_patrick_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtCi"
                android:text="Tuesday October 27, 2020"
                android:id="@+id/txtSeatDateEn"
                android:textSize="10dp"
                android:textAllCaps="true"
                android:fontFamily="@font/open_sans_regular"
                android:layout_alignBaseline="@id/txtCi"
                android:layout_marginLeft="5dp"
                android:textColor="@color/celestial_blue"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ቀን"
                android:id="@+id/txtM"
                android:layout_below="@id/txtSeatDateEn"
                android:textSize="10dp"
                android:fontFamily="@font/open_sans_regular"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/st_patrick_blue"
                android:layout_alignLeft="@id/txtCi"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtM"
                android:text="ማክሰኞ ጥቅምት 17 2013"
                android:id="@+id/txtSeatDateAm"
                android:textSize="10dp"
                android:textAllCaps="true"
                android:fontFamily="@font/open_sans_regular"
                android:layout_alignBaseline="@id/txtM"
                android:layout_alignLeft="@id/txtSeatDateEn"
                android:textColor="@color/celestial_blue"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unit price / ዋጋ"
                android:id="@+id/txtS"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_below="@id/txtSeatDateAm"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/st_patrick_blue"
                android:layout_marginTop="15dp"
                android:layout_alignLeft="@id/txtM"
                android:textAllCaps="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtSeatDateAm"
                android:layout_alignLeft="@id/txtS"
                android:text="785.00"
                android:id="@+id/txtUnitPrice"
                android:layout_below="@id/txtS"
                android:textSize="9dp"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/greenColor"
                android:textAllCaps="true"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/txtS"
                android:layout_alignBottom="@id/txtS">
                <ImageView
                    android:id="@+id/imgDT"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_clock"
                    android:layout_alignParentBottom="true"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDepartureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00"
                    android:textSize="10sp"
                    android:textColor="@color/celestial_blue"
                    android:fontFamily="@font/open_sans_regular"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/imgDT"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentBottom="true" />
                <ImageView
                    android:id="@+id/imgSeatIdeal"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_seat"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/txtDepartureTime"
                    android:layout_marginLeft="15dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAvailSeats_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="10sp"
                    android:textColor="@color/celestial_blue"
                    android:fontFamily="@font/open_sans_regular"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/imgSeatIdeal"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentBottom="true" />
                <ImageView
                    android:id="@+id/imgSeatIdeal1"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/icon_route"
                    android:layout_toRightOf="@id/txtAvailSeats_"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentBottom="true"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAvailSubRoutes_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="10sp"
                    android:textColor="@color/celestial_blue"
                    android:fontFamily="@font/open_sans_regular"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_toRightOf="@id/imgSeatIdeal1"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txtST"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtUnitPrice"
                android:layout_alignLeft="@id/txtM"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Discount / ቅናሽ"
                android:textAllCaps="true"
                android:textColor="@color/st_patrick_blue"
                android:textSize="10dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtST"
                android:layout_below="@+id/txtST"
                android:text="785.00"
                android:textSize="9dp"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/greenColor"
                android:textStyle="bold"
                android:layout_alignBottom="@id/txtChildrenDiscount"/>
            <TextView
                android:id="@+id/txtCD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txtST"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Children Discount / የህጻናት ቅናሽ"
                android:textAllCaps="true"
                android:textColor="@color/st_patrick_blue"
                android:textSize="10dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.00"
                android:id="@+id/txtChildrenDiscount"
                android:textSize="9dp"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/greenColor"
                android:textAllCaps="true"
                android:layout_below="@id/txtCD"
                android:layout_alignParentRight="true"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtTOT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtChildrenDiscount"
                android:layout_alignLeft="@id/txtM"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="Adult Price / የአዋቂዎች ዋጋ"
                android:textAllCaps="true"
                android:textColor="@color/st_patrick_blue"
                android:textSize="10dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.00"
                android:id="@+id/txtAdultTotal"
                android:textSize="9dp"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/greenColor"
                android:textAllCaps="true"
                android:layout_below="@id/txtTOT"
                android:layout_alignLeft="@+id/txtTOT"
                android:textStyle="bold"
                android:layout_alignBottom="@id/txtChildrenTotal"/>
            <TextView
                android:id="@+id/txtTOTAm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtChildrenDiscount"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/open_sans_regular"
                android:text="children Price / የህጻናት ዋጋ"
                android:textAllCaps="true"
                android:textColor="@color/st_patrick_blue"
                android:textSize="10dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.00"
                android:id="@+id/txtChildrenTotal"
                android:textSize="9dp"
                android:fontFamily="@font/open_sans_regular"
                android:textColor="@color/greenColor"
                android:textAllCaps="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txtTOTAm"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/arrangement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rLinformation"
        android:background="#aaa9"
        android:layout_marginTop="2dp">
        <HorizontalScrollView
            android:id="@+id/hScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_margin="10dp">
            <ScrollView
                android:id="@+id/vScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center">
            </ScrollView>
        </HorizontalScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrangement"
        android:layout_margin="5dp">
<!--        android:layout_above="@id/rLB">-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ticketRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:overScrollMode="never"/>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription=""
        app:elevation="12dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/icon_invoice"/>
</RelativeLayout>