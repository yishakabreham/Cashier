<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtRouteDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/st_patrick_blue"
            android:fontFamily="@font/open_sans_regular"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_alignParentLeft="true"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtRouteDescTranslation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="መቀለ - አዲስ አበባ"
            android:textSize="10sp"
            android:layout_below="@id/txtRouteDesc"
            android:layout_marginTop="5dp"
            android:textColor="@color/celestial_blue"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/open_sans_regular"
            android:layout_toLeftOf="@id/txtTripUnitAmount"
            android:layout_alignLeft="@id/txtRouteDesc"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/txtRouteDesc">
            <ImageView
                android:id="@+id/imgSeatIdeal"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_seat"
                android:layout_alignParentBottom="true"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAvailSeats_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="9sp"
                android:textColor="@color/st_patrick_blue"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imgSeatIdeal"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true" />
            <ImageView
                android:id="@+id/imgSeatIdeal1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_route"
                android:layout_toRightOf="@id/txtAvailSeats_"
                android:layout_marginLeft="15dp"
                android:layout_alignParentBottom="true"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAvailSubRoutes_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="9sp"
                android:textColor="@color/st_patrick_blue"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_toRightOf="@id/imgSeatIdeal1"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTripUnitAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETB 750.0 (Dis: ETB 50.0)"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/greenColor"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@id/txtRouteDescTranslation"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/open_sans_regular"/>
    </RelativeLayout>
</RelativeLayout>